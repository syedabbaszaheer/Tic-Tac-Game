        <Button
                android:layout_marginRight="3pt"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/bo8" android:onClick="buClick"/>
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/bo9" android:onClick="buClick"/>
    </TableRow>
</TableLayout>